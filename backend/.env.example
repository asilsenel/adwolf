# ===========================================
# Ad Platform MVP - Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# SUPABASE
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# Note: Anon key is for frontend, service role is for backend

# ===========================================
# GOOGLE ADS
# ===========================================
GOOGLE_ADS_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your-google-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
# For production: https://your-domain.com/api/v1/auth/google/callback

# ===========================================
# META ADS (Facebook Marketing API)
# ===========================================
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_REDIRECT_URI=http://localhost:8000/api/v1/auth/meta/callback
# For production: https://your-domain.com/api/v1/auth/meta/callback

# ===========================================
# OPENAI
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# ===========================================
# REDIS (Celery Broker)
# ===========================================
REDIS_URL=redis://localhost:6379/0
# For Railway/production: redis://your-redis-url

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# AES-256 key for token encryption (32 bytes = 64 hex chars)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-64-char-hex-encryption-key-here

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=Ad Platform MVP
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=DEBUG

# Default timezone
DEFAULT_TIMEZONE=Europe/Istanbul

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
# For production: https://your-frontend-domain.com

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
